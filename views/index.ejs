<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>URL Shrinker</title>
</head>
<body>
  <div class="container">
    <h1 class="my-4">URL Shrinker</h1>

    <form action="/shortUrls" method="post" class="my-4 d-flex">
      <input required placeholder="Enter full URL" name="full" id="full" class="form-control col me-2">
      <button class="btn btn-success" type="submit">Shrink</button>
    </form>

    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>Full Url</th>
          <th>Short Url</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.full %>" target="_blank"><%= shortUrl.full %></a></td>
            <td><a href="/<%= shortUrl.short %>" target="_blank"><%= shortUrl.short %></a></td>
            <td><%= shortUrl.clicks %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
